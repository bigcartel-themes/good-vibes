{
  "name": "Good Vibes",
  "version": "1.6.0",
  "images": [
    {
      "variable": "logo",
      "label": "Header Logo",
      "description": "Good for an image up to 80px high"
    }
  ],
  "image_sets": [
    {
      "variable": "slideshow",
      "label": "Homepage Slideshow",
      "description": "1300px by 450px images recommended"
    }
  ],
  "preset_styles": {
    "preview": {
      "title_font": "primary_font",
      "body_font": "primary_font",
      "text_color": "primary_color",
      "background_color": "background_color"
    },
    "presets": [
      {
        "group_name": "Natural",
        "styles": [
          {
            "style_name": "Natural #1",
            "fonts": {
              "primary_font": "Helvetica"
            },
            "colors": {
              "background_color": "#F7F7F3",
              "primary_color": "#323A39",
              "secondary_color": "#A21C10",
              "tagline_color": "#323A39",
              "announcement_text_color": "#F7F7F3",
              "announcement_background_color": "#323A39"
            }
          },
          {
            "style_name": "Natural #2",
            "fonts": {
              "primary_font": "Cutive Mono"
            },
            "colors": {
              "background_color": "#FEF5EF",
              "primary_color": "#584B53",
              "secondary_color": "#9D5C63",
              "tagline_color": "#584B53",
              "announcement_text_color": "#FEF5EF",
              "announcement_background_color": "#584B53"
            }
          }
        ]
      },
      {
        "group_name": "Classic",
        "styles": [
          {
            "style_name": "Classic #1",
            "fonts": {
              "primary_font": "DM Sans"
            },
            "colors": {
              "background_color": "#FFFFFF",
              "primary_color": "#111111",
              "secondary_color": "#5900FF",
              "tagline_color": "#111111",
              "announcement_text_color": "#FFFFFF",
              "announcement_background_color": "#111111"
            }
          },
          {
            "style_name": "Classic #2",
            "fonts": {
              "primary_font": "Marcellus"
            },
            "colors": {
              "background_color": "#141415",
              "primary_color": "#F8F8F8",
              "secondary_color": "#D0D0D0",
              "tagline_color": "#F8F8F8",
              "announcement_text_color": "#141415",
              "announcement_background_color": "#F8F8F8"
            }
          }
        ]
      },
      {
        "group_name": "Playful",
        "styles": [
          {
            "style_name": "Playful #1",
            "fonts": {
              "primary_font": "Syne"
            },
            "colors": {
              "background_color": "#CEFF66",
              "primary_color": "#000000",
              "secondary_color": "#0000FF",
              "tagline_color": "#000000",
              "announcement_text_color": "#CEFF66",
              "announcement_background_color": "#000000"
            }
          }
        ]
      }
    ]
  },
  "fonts": [
    {
      "variable": "primary_font",
      "label": "Primary Font",
      "default": "Helvetica"
    }
  ],
  "colors": [
    {
      "variable": "background_color",
      "label": "Background Color",
      "default": "#F7F7F3"
    },
    {
      "variable": "primary_color",
      "label": "Primary Color",
      "default": "#323A39"
    },
    {
      "variable": "secondary_color",
      "label": "Secondary Color",
      "default": "#A21C10"
    },
    {
      "variable": "tagline_color",
      "label": "Tagline Color",
      "default": "#323A39"
    },
    {
      "variable": "announcement_text_color",
      "label": "Announcement Message Text",
      "default": "#F7F7F3"
    },
    {
      "variable": "announcement_background_color",
      "label": "Announcement Message Background",
      "default": "#323A39"
    }
  ],
  "checkout": {
    "header_image": "{{ logo }}",
    "header_image_max_width": "300px",
    "header_image_max_height": "80px",
    "title_font_size": "22px",
    "title_color": "{{ primary_color }}",
    "title_background_color": "transparent",
    "title_font": "{{ primary_font }}",
    "background_color": "{{ background_color }}",
    "body_font": "{{ primary_font }}",
    "body_font_size": "14px",
    "step_border_color":"{{ secondary_color }}",
    "step_header_color":"{{ primary_color }}",
    "step_inactive_header_color":" {{ primary_color }}",
    "step_background_color":"{{ background_color }}",
    "step_header_font": "{{ primary_font }}",
    "content_background_color":"{{ background_color }}",
    "content_banded": "true",
    "content_header_background_color":"{{ background_color }}",
    "content_header_color":"{{ primary_color }}",
    "content_color":"{{ secondary_color }}",
    "content_header_font_size":"18px",
    "content_border_color":"transparent",
    "content_border_radius":"0px",
    "error_background_color": "#ea4859",
    "error_color": "#ffffff",
    "error_border_radius": "0",
    "error_border_color": "#ea4859",
    "input_focus_color": "#000000",
    "input_focus_background_color": "#ffffff",
    "input_focus_border_color": "#bfbfbf",
    "input_font": "{{ primary_font }}",
    "input_error_border_color": "#ea4859",
    "input_color": "#000000",
    "input_error_color": "#000000",
    "input_border_color": "#bfbfbf",
    "input_background_color": "#ffffff",
    "input_error_background_color": "#ffffff",
    "input_border_radius":"0px",
    "button_color":"{{ primary_color }}",
    "button_border_width":"2px",
    "button_font": "{{ primary_font }}",
    "button_border_radius":"0px",
    "button_hover_color":"{{ secondary_color }}",
    "button_background_color":"transparent",
    "button_hover_background_color":"transparent",
    "button_border_color":"{{ primary_color }}",
    "button_hover_border_color":"{{ secondary_color }}",
    "link_color":"{{ primary_color }}",
    "link_hover_color":"{{ secondary_color }}",
    "step_header_font_size":"18px",
    "summary_color":"{{ primary_color }}",
    "summary_secondary_color":"{{ secondary_color }}",
    "summary_submit_background_color":"{{ background_color }}",
    "summary_item_border_color":"{{ primary_color }}",
    "summary_item_list_border_color": "{{ primary_color }}"
  },
  "options": [
    {
      "variable": "announcement_message_text",
      "label": "Announcement text",
      "type": "text",
      "description": "Displays an announcement message on the top of every page"
    },
    {
      "variable": "maintenance_message",
      "label": "Maintenance mode message",
      "type": "text",
      "description": "A message visitors see when your shop is in Maintenance Mode",
      "default": "We're working on our shop right now.<br /><br />Please check back soon."
    },
    {
      "variable": "featured_header",
      "label": "Featured header",
      "type": "text",
      "description": "Displays above your featured products on the Home page",
      "default": "Featured Products"
    },
    {
      "variable": "featured_products",
      "label": "Featured Products",
      "type": "select",
      "options": "0..100",
      "default": 12,
      "description": "The number of featured products on the Home page"
    },
    {
      "variable": "products_per_page",
      "label": "Products per page",
      "type": "select",
      "options": "1..100",
      "default": 48,
      "description": "The number of products shown per page"
    },
    {
      "variable": "product_list_layout",
      "label": "Product List Layout",
      "type": "select",
      "options": [
        ["Masonry", "masonry"],
        ["Rows", "rows"]
      ],
      "default": "rows",
      "description": "The arrangement of your products on the Home and Products pages"
    },
    {
      "variable": "share_buttons",
      "label": "Show social buttons",
      "type": "boolean",
      "default": false,
      "description": "Adds Facebook, Twitter, and Pinterest buttons to Product pages"
    },
    {
      "variable": "show_sold_out_product_options",
      "label": "Show sold out product options",
      "type": "boolean",
      "default": true,
      "description": "Shows sold out product options in the Product page dropdowns",
      "requires": "inventory"
    },
    {
      "variable": "store_tagline",
      "label": "Store Tagline",
      "type": "text",
      "description": "This tagline appears over your slideshow"
    },
    {
      "variable": "product_image_zoom",
      "label": "Enable product image zoom",
      "type": "boolean",
      "default": true,
      "description": "Click to open a larger version of the Product page image"
    },
    {
      "variable": "desktop_product_page_images",
      "label": "Desktop product page images",
      "type": "select",
      "options": [
        ["Thumbnails", "thumbnails"],
        ["Carousel", "carousel"],
        ["Stacked 2 column", "two-column"],
        ["Stacked full width", "stacked"]
      ],
      "default": "carousel",
      "description": "Sets the display of the Product page gallery"
    },
    {
      "variable": "mobile_product_page_images",
      "label": "Mobile product page image carousel",
      "type": "select",
      "options": [
        ["Show thumbnails", "show-thumbnails"],
        ["Hide thumbnails", "hide-thumbnails"]
      ],
      "default": "show-thumbnails",
      "description": "Choose to hide or show thumbnails on the mobile Product page carousel"
    },
    {
      "variable": "money_format",
      "label": "Price display",
      "type": "select",
      "options": [
        ["Currency sign", "sign"],
        ["Currency code with sign", "sign_and_code"]
      ],
      "default": "sign",
      "description": "Sets the display of prices in your shop"
    },
    {
      "variable": "instagram_url",
      "label": "Instagram URL",
      "type": "text",
      "description": "Ex: https://instagram.com/bigcartel"
    },
    {
      "variable": "tiktok_url",
      "label": "TikTok URL",
      "type": "text",
      "description": "Ex: https://tiktok.com/@bigcartelofficial"
    },
    {
      "variable": "twitter_url",
      "label": "Twitter URL",
      "type": "text",
      "description": "Ex: https://twitter.com/bigcartel"
    },
    {
      "variable": "facebook_url",
      "label": "Facebook URL",
      "type": "text",
      "description": "Ex: https://facebook.com/bigcartel"
    },
    {
      "variable": "snapchat_url",
      "label": "Snapchat URL",
      "type": "text",
      "description": "Ex: https://snapchat.com/add/bigcartel"
    },
    {
      "variable": "pinterest_url",
      "label": "Pinterest URL",
      "type": "text",
      "description": "Ex: https://pinterest.com/big_cartel"
    },
    {
      "variable": "youtube_url",
      "label": "YouTube URL",
      "type": "text",
      "description": "Ex: https://youtube.com/@BigCartelDotCom"
    },
    {
      "variable": "tumblr_url",
      "label": "Tumblr URL",
      "type": "text",
      "description": "Ex: https://bigcartel.tumblr.com"
    },
    {
      "variable": "bandcamp_url",
      "label": "Bandcamp URL",
      "type": "text",
      "description": "Ex: https://bigcartel.bandcamp.com"
    }
  ]
}
