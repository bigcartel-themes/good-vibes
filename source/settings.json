{
  "name": "Good Vibes",
  "version": "0.0.1",
  "images": [
    {
      "variable": "logo",
      "label": "Logo",
      "description": "Add your logo to the header. A height of 80px is recommended"
    }
  ],
  "image_sets": [
    {
      "variable": "slideshow",
      "label": "Homepage Slideshow",
      "description": "1440px by 360px images recommended"
    }
  ],
  "fonts": [
    {
      "variable": "primary_font",
      "label": "Primary Font",
      "default": "Lato"
    }
  ],
  "colors": [
   {
      "variable": "primary_color",
      "label": "Primary Color",
      "default": "#222222"
    },
    {
      "variable": "secondary_color",
      "label": "Secondary Color",
      "default": "#f55253"
    }
  ],
   "checkout": {
    "logo": "{{ logo }}",
    "title_color": "{{ primary_color }}",
    "title_font": "{{ primary_font }}",
    "step_header_font": "{{ primary_font }}",
    "background_color": "#fff",
    "body_font": "{{ primary_font }}",
    "input_border_radius": "0px",
    "input_border_color": "{{ primary_color }}",
    "input_border_width": "2px",
    "button_background_color": "#fff",
    "button_border_color": "{{ primary_color }}",
    "button_border_width": "2px",
    "button_border_radius": "0px",
    "button_hover_border_color": "{{ secondary_color }}",
    "link_color": "{{ secondary_color }}"
  },
  "options": [
    {
      "variable": "products_per_page",
      "label": "Products per page",
      "type": "select",
      "options": "1..100",
      "default": 9,
      "description": "The number of products shown per page"
    },
    {
      "variable": "featured_products",
      "label": "Featured Products",
      "type": "select",
      "options": "1..100",
      "default": 6,
      "description": "The number of featured products"
    },
    {
      "variable": "store_tagline",
      "label": "Store Tagline",
      "type": "text",
      "description": "This tagline appears over slideshow and or banner area of shop"
    },
    {
      "variable": "instagram_username",
      "label": "Instagram username",
      "type": "text",
      "description": "Instagram username without @ symbol"
    },
    {
      "variable": "instagram_photos_count",
      "label": "How many Instagram photos to show?",
      "type": "select",
      "options": [4, 8],
      "default": 4,
      "description": "The number of Instagram photos to show on the store."
    },
    {
      "variable": "share_buttons",
      "label": "Show social buttons",
      "type": "boolean",
      "default": true,
      "description": "Adds Facebook, Twitter, and Pinterest buttons to Product pages"
    }
  ]

}
